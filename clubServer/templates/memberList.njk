{% extends "clubBase.njk" %}

{% block metaStuff %}
    <title>Current Members - ADMIN ONLY</title>
    <meta name="author" content="Adam Boyd">
    <meta name="description" content="The Current Members for the East Bay Jewelry Makers Club">
{% endblock %}

{% block header %}
    <h1>Current Members</h1>
{% endblock %}

{% block main %}
        <table id="events">
            <thead>
                <tr>
                    <th> First Name </th>
                    <th> Last Name </th>
                    <th> Email </th>
                    <th> Role </th>
                </tr>
            </thead>
            <tbody>
                {%for user in users%}
                    <tr>
                        <td>{{user.firstName}}</td>
                        <td>{{user.lastName}}</td>
                        <td>{{user.email}}</td>
                        <td>{{user.role}}</td>
                    </tr>
                {%endfor%}
            </tbody>
        </table>
{% endblock %}
