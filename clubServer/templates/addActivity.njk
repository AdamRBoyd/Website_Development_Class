{% extends "clubBase.njk" %}

{% block metaStuff %}
    <title>Add Activity</title>
    <meta name="author" content="Adam Boyd">
    <meta name="description" content="This is the add activities page for the East Bay Jewelry Makers Club">
{% endblock %}

{% block header %}
    <h1>Add Activity</h1>
{% endblock %}

{% block main %}
    <section class="gridContainer bordered">
        <form action="activityAdded" method="get" class="form-addAct">
            <label for="title">Title: </label>
            <input type="text" name="title" id="title" minlength="1" maxlength="50" required>

            <label for="location">Location: </label>
            <input type="text" name="location" id="location" minlength="1" maxlength="50" required>

            <label for="dateTime">Date and Time: </label>
            <input type="datetime-local" name="dateTime" id="dateTime" required>

            <button type="submit">Post Event</button>
        </form>
    </section>
    <br>
{% endblock %}